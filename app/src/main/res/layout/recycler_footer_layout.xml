<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/update_notification_height_80dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_introduction_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_toRightOf="@+id/progressbar_loadmore_footer"
        android:singleLine="true"
        android:text="@string/loadmore_data"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_24" />

    <ProgressBar
        android:id="@+id/progressbar_loadmore_footer"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="@dimen/margin_10dip"
        android:layout_height="@dimen/margin_10dip"
        android:layout_gravity="center_vertical" />
</LinearLayout>
