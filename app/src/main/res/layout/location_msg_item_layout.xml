<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_height="140dp"
        android:layout_width="fill_parent"
        android:background="@color/competition"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/race_date_item"
                    android:drawablePadding="@dimen/margin_edge"
                    android:text="@string/competition_date1"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="@dimen/margin_edge"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2016.08.02"
                    android:textColor="@color/competition_txt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/newlist_item_height"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/margin_edge"
                    android:drawableLeft="@drawable/race_name_item"
                    android:gravity="center_vertical"
                    android:text="@string/competition_project"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_edge"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="深圳脑王大赛/二进制数字"
                    android:textColor="@color/competition_txt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/hv_container_height"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/race_address_item"
                    android:drawablePadding="@dimen/margin_edge"
                    android:gravity="center_vertical"
                    android:text="@string/competition_addr"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_edge"
                    android:gravity="center"
                    android:text="深圳市科技园高新南一道赋安科技大厦"
                    android:textColor="@color/competition_txt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="5">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/race_fee_item"
                    android:drawablePadding="@dimen/margin_edge"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="@string/apply_cost1"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="5" >
                <TextView
                    android:id="@+id/txt_cost"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/margin_edge"
                    android:gravity="center_vertical"
                    android:text="5"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                 >

                <TextView
                    android:id="@+id/in_game"
                    android:layout_height="50dp"
                    android:layout_width="@dimen/newlist_item_height"
                    android:layout_margin="@dimen/margin_edge"
                    android:text="@string/person_entry_fee"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_interval"
                    android:textSize="@dimen/common_text_22"
                    android:background="@drawable/entry_btn_shape"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
