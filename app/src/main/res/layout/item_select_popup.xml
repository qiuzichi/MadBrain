<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RadioGroup
        android:id="@+id/radio_group_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RadioButton
            android:id="@+id/radio_select_competition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@color/transparent"
            android:paddingLeft="@dimen/margin_10dip"
            android:paddingRight="@dimen/margin_10dip"
            android:text="@string/race_mode"
            android:textColor="@color/record_china"
            android:background="@drawable/sel_radio_group_bg"
            android:textSize="@dimen/common_text_22"
            />

        <RadioButton
            android:id="@+id/radio_select_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@color/transparent"
            android:paddingLeft="@dimen/margin_10dip"
            android:paddingRight="@dimen/margin_10dip"
            android:text="@string/exercise_mode"
            android:textColor="@color/record_china"
            android:background="@drawable/sel_radio_group_bg"
            android:textSize="@dimen/common_text_22"
            />




    </RadioGroup>

</LinearLayout>
