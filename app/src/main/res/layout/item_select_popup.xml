<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_30dp"
    android:background="@color/update_text_bg">

    <TextView
        android:id="@+id/text_select_popup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:textColor="@color/record_china"
        android:textSize="@dimen/common_text_22" />

    <CheckBox
        android:id="@+id/check_select_popup"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10dip" />


</RelativeLayout>
