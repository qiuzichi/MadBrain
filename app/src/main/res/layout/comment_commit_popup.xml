<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/popopwindows_height"
    android:background="@color/comment_popwindows_bg"
    android:orientation="horizontal"
    android:id="@+id/popup_windows_linearLayout"
    >

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:hint="@string/input_comment"
        android:inputType="textMultiLine"
        android:gravity="left"
        android:paddingTop="@dimen/margin_edge"
        android:paddingLeft="@dimen/margin_5dip"
        android:layout_marginTop="@dimen/margin_5dip"
        android:minLines="6"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:textSize="@dimen/common_text_22"
        android:textColor="@color/black"
        android:background="@drawable/edit_block"
        android:id="@+id/et_popup_comment_input"
        />


        <Button
            android:id="@+id/btn_comment_commit"
            android:layout_width="@dimen/popopwindows_report_weight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_5dip"
            android:paddingLeft="@dimen/margin_10dip"
            android:paddingRight="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:text="@string/button_report"
            android:textSize="@dimen/common_text_22"
            />

</LinearLayout>
