<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_all"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_10dip"
    android:layout_weight="5"
    android:layout_marginLeft="@dimen/margin_edge"
    android:layout_marginRight="@dimen/margin_edge"
    android:background="@color/item_bg_apply"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/game_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/project_name"
        android:gravity="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/game_addr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/game_data"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/game_cost"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/game_apply"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="@string/person_entry_fee"
            android:background="@drawable/my_apply_bg" />


        <ImageView
            android:id="@+id/img_gz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_10dip"
            android:layout_gravity="center"
            android:src="@drawable/personal_favorite_normal" />
    </LinearLayout>
</LinearLayout>
