<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_competition_mode_set"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title_competition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10dip"
            android:text="@string/competition_mode_set"
            android:textColor="@color/main_1"
            android:textSize="@dimen/text_size_competition" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group_competition_mode"
            android:layout_below="@id/txt_title_competition"
            android:paddingTop="@dimen/margin_10dip"
            android:gravity="center_horizontal"
            >


            <RadioButton
                android:id="@+id/btn_default_mode"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/margin_30dp"
                android:background="@drawable/sel_mode_group_bg"
                android:button="@color/transparent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/common_text_24"
                android:textColor="@color/white"
                />
            <RadioButton
                android:id="@+id/btn_default_mode_3"
                android:layout_toRightOf="@+id/btn_default_mode"
                android:layout_marginRight="@dimen/margin_30dp"
                android:layout_width="wrap_content"
                android:background="@drawable/sel_mode_group_bg"
                android:button="@color/transparent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:textSize="@dimen/common_text_24"
                android:textColor="@color/white"
                />

            <RadioButton
                android:id="@+id/btn_default_mode_4"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/btn_default_mode_3"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sel_mode_group_bg"
                android:button="@color/transparent"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_30dp"
                android:text="4"
                android:textSize="@dimen/common_text_24"
                android:textColor="@color/white"
                />
        </RadioGroup>
    </RelativeLayout>

