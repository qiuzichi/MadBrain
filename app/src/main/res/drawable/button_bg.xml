<?xml version="1.0" encoding="utf-8"?>
<!-- 取消按钮效果 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true" android:drawable="@color/button_bg_press_gray"><shape>


            <corners android:radius="7dp" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <!-- 焦点 -->
    <item  android:drawable="@color/button_bg_press_blue"><shape>


        <corners android:radius="7dp" />

        <!-- 按钮文字和边缘距离(内边距) -->
        <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
    </shape></item>

</selector>